# ===========================================
# CONFIGURACIÓN DE SUPABASE
# ===========================================
# Copia este archivo a .env y configura tus credenciales reales

# Host de tu proyecto Supabase (sin https://)
SUPABASE_HOST=db.your-project-ref.supabase.co

# Puerto de la base de datos (normalmente 5432)
SUPABASE_PORT=5432

# Nombre de la base de datos (normalmente postgres)
SUPABASE_DATABASE=postgres

# Usuario de la base de datos (normalmente postgres)
SUPABASE_USERNAME=postgres

# ⚠️  IMPORTANTE: Cambia esta contraseña por la tuya real
SUPABASE_PASSWORD=your-database-password-here

# URL completa de conexión (opcional, se puede construir automáticamente)
SUPABASE_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres

# Configuración SSL (require para Supabase)
SUPABASE_SSL_MODE=require

# Timeouts de conexión
SUPABASE_TIMEOUT=30
SUPABASE_CONNECT_TIMEOUT=10

# ===========================================
# CONFIGURACIÓN DEL PROYECTO
# ===========================================

# URL de tu proyecto Supabase (opcional)
SUPABASE_PROJECT_URL=https://your-project-ref.supabase.co

# Nombre de tu proyecto (opcional)
SUPABASE_PROJECT_NAME=Mi Proyecto Supabase

# ===========================================
# CONFIGURACIÓN DE LOGGING
# ===========================================

# Habilitar logging (true/false)
LOG_ENABLED=true

# Nivel de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Archivo de log
LOG_FILE=database.log

# Tamaño máximo del archivo de log en bytes (10MB = 10485760)
LOG_MAX_SIZE=10485760

# Número máximo de archivos de log a mantener
LOG_MAX_FILES=5

# ===========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ===========================================

# Nombre de la aplicación
APP_NAME=DatabaseLibrary

# Entorno (development, production, testing)
APP_ENV=development
