# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Copy this file to .env and configure your real credentials

# Your Supabase project host (without https://)
SUPABASE_HOST=db.your-project-ref.supabase.co

# Database port (usually 5432)
SUPABASE_PORT=5432

# Database name (usually postgres)
SUPABASE_DATABASE=postgres

# Database username (usually postgres)
SUPABASE_USERNAME=postgres

# ⚠️  IMPORTANT: Change this password to your real one
SUPABASE_PASSWORD=your-database-password-here

# Complete connection URL (optional, can be built automatically)
SUPABASE_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres

# SSL configuration (require for Supabase)
SUPABASE_SSL_MODE=require

# Connection timeouts
SUPABASE_TIMEOUT=30
SUPABASE_CONNECT_TIMEOUT=10

# ===========================================
# PROJECT CONFIGURATION
# ===========================================

# Your Supabase project URL (optional)
SUPABASE_PROJECT_URL=https://your-project-ref.supabase.co

# Your project name (optional)
SUPABASE_PROJECT_NAME=My Supabase Project

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Enable logging (true/false)
LOG_ENABLED=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file
LOG_FILE=database.log

# Maximum log file size in bytes (10MB = 10485760)
LOG_MAX_SIZE=10485760

# Maximum number of log files to keep
LOG_MAX_FILES=5

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Application name
APP_NAME=DatabaseLibrary

# Environment (development, production, testing)
APP_ENV=development